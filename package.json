  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vovaroman/nodehosting.git"
  },
  "author": "vova roman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vovaroman/nodehosting/issues"
